<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EmptyCourseText">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:fontFamily">@font/omniblack_outline_demo</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProfileStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProfileDrawableText" parent="ProfileStyle">
        <item name="android:textSize">@dimen/sp_25</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
    </style>

    <style name="ProfileHeader" parent="ProfileStyle">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ProfileContent" parent="ProfileStyle">
        <item name="android:textSize">@dimen/sp_25</item>
        <item name="android:layout_marginTop">@dimen/dp_35</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:padding">@dimen/dp_8</item>
    </style>

    <style name="CollapsedAppBarTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="DetailDrawableText">
        <item name="android:background">@drawable/bg_text_border</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>
