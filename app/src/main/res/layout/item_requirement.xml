<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_light">

    <View
        android:id="@+id/viewExpand"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/ic_expand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textRequirementName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:drawableStart="@drawable/ic_requirement"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="start|center_vertical"
        android:padding="@dimen/dp_8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toTopOf="@id/expandableLayout"
        app:layout_constraintEnd_toStartOf="@id/textRequirementDeadline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textRequirementDeadline"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:drawableEnd="@drawable/ic_date"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="end|center_vertical"
        android:padding="@dimen/dp_8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toTopOf="@id/expandableLayout"
        app:layout_constraintEnd_toStartOf="@id/viewExpand"
        app:layout_constraintStart_toEndOf="@id/textRequirementName"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expandableLayout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/color_default_background"
        android:orientation="vertical"
        app:ael_duration="400"
        app:ael_expanded="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textRequirementName">

        <TextView
            android:id="@+id/textRequirementDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15"/>
    </com.github.aakira.expandablelayout.ExpandableLinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
